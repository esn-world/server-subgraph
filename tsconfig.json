{
  "compilerOptions": {
    "rootDirs": ["src"],
    "outDir": "dist",
    "lib": [
      "esnext",
      "dom"
    ],
    "target": "es2020",
    "module": "node16",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "strict": true,
    "typeRoots": ["node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"],
  "ts-node": {
    "swc": true
  }
}
